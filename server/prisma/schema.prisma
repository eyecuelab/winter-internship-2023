// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name    String
  email String
  games GameUser[]
  teams UserTeam[]
  // auth   String
}

model Role {
  id       Int    @id @default(autoincrement())
  name     String
}
model Character {
  id       Int    @id @default(autoincrement())
  name    String
}
model GameUser { 
  id       Int    @id @default(autoincrement())
  game     Game  @relation(fields: [gameId], references: [id])
  gameId    Int
  user   User  @relation(fields: [userId], references: [id])
  userId    Int
  roleId    Int
}
model UserTeam {
  id       Int    @id @default(autoincrement())
  team     Team  @relation(fields: [teamId], references: [id])
  teamId    Int
  user   User  @relation(fields: [userId], references: [id])
  userId    Int
  playerControl String
}

model Team {
  id       Int    @id @default(autoincrement())
  gameId   Int
  characterId  Int
  teamName   String
  users UserTeam[]
  //horizontalUserId   User  @relation(fields: [user1Id], references: [id])
  //user1Id    Int
  //verticalUserId   User  @relation(fields: [user2Id], references: [id])
  //user2Id    Int
  score     Int
}
model TeamMechanics {
  id       Int    @id @default(autoincrement())
  currentDirectionMoving   String
  nextDirection    String
  // powerUp    Boolean
}

model Game {
  id       Int    @id @default(autoincrement())
  timeLeft Int
  boardArray Json[]
  pelletCount Int
  users GameUser[]
}


