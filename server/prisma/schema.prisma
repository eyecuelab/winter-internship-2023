generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int        @id @default(autoincrement())
  name  String?
  email String
  games GameUser[]
  teams TeamUser[]
}

model Role {
  id       Int        @id @default(autoincrement())
  name     String
  gameUser GameUser[]
}

model Character {
  id    Int    @id @default(autoincrement())
  name  String
  teams Team[]
}

model GameUser {
  id     Int  @id @default(autoincrement())
  gameId Int
  userId Int
  roleId Int
  game   Game @relation(fields: [gameId], references: [id])
  role   Role @relation(fields: [roleId], references: [id])
  user   User @relation(fields: [userId], references: [id])
}

model TeamUser {
  id                          Int    @id @default(autoincrement())
  teamId                      Int
  userId                      Int
  axisControl                 String
  team                        Team   @relation(fields: [teamId], references: [id])
  user                        User   @relation(fields: [userId], references: [id])
}

model Team {
  id                     Int        @id @default(autoincrement())
  color                  String
  score                  Int
  position               Json[]
  velocity               Json[]
  angle                  Int
  characterId            Int
  gameId                 Int
  kartid                 Int
  character              Character  @relation(fields: [characterId], references: [id])
  game                   Game       @relation(fields: [gameId], references: [id])
  kart                   Kart       @relation(fields: [kartid], references: [id])
  users                  TeamUser[]
}

model Game {
  id          Int        @id @default(autoincrement())
  map         Int
  boundaries  Json[]
  pellets     Json[]
  spawnPoints Json[]
  isActive    Boolean
  users       GameUser[]
  teams       Team[]
}

model Kart {
  id           Int    @id @default(autoincrement())
  name         String
  topSpeed     Int
  acceleration Int
  handling     Int
  teams        Team[]
}
